{
  "manifest_version": 3,
  "name": "Gerenciador de Tarefas - Marketing Pro",
  "version": "1.0.0",
  "description": "Gerencie tarefas por cliente com controle de urgÃªncia e produtividade",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Gerenciador de Tarefas"
  },
  "sidebar_action": {
